@using WebProgramlamaOdev.EntityLayer.Concreate;
@model List<Randevu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Randevu Tarih</th>
                <th>Saat Aralığı</th>
                <th>Hasta TC</th>
                <th>Doktor Id</th>
                <th>Poliklinik Id</th>
                <th>Durum</th>
                <th>Sil</th>
                <th>GÜncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.RandevuId</th>
                    <td>@item.RandevuTarih</td>
                    <td>@item.SaatAraligi</td>
                    <td>@item.HastaTC</td>
                    <td>@item.DoktorId</td>
                    <td>@item.PoliklinikId</td>
                    <td>@item.Durum</td>
                    <td><a href="/Randevuu/DeleteRandevu/@item.RandevuId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Randevuu/UpdateRandevu/@item.RandevuId" class="btn btn-success">Güncelle</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Randevuu/AddRandevu/" class="btn btn-primary">Yeni Randevu Ekle</a>
</div>